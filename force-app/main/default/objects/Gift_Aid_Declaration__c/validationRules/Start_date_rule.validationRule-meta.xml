<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Start_date_rule</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISBLANK( Declaration_Start_Date__c )), Declaration_Start_Date__c &gt;TODAY())</errorConditionFormula>
    <errorDisplayField>Declaration_Start_Date__c</errorDisplayField>
    <errorMessage>Start date should not be greater than today</errorMessage>
</ValidationRule>
